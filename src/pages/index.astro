---
import Layout from "../layouts/Layout.astro";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import Section from "../components/ui/Section.astro";
import HeroSlider from "../components/content/HeroSlider.astro";
import StarTrekText from "../components/ui/StarTrekText.astro";
import Button from "../components/ui/Button.astro";

import Customizator from "../components/content/Customizator.vue";

import { Image } from "astro:assets";
import myImportedImage from "/src/assets/img/customised_pattern.png";
import backgroundHero from "/src/assets/img/section-bg/hero.webp";
import backgroundNano from "/src/assets/img/section-bg/nano.webp";
import backgroundConvection from "/src/assets/img/section-bg/convection.webp";
import backgroundForm from "/src/assets/img/section-bg/form.webp";
import backgroundCustom from "/src/assets/img/section-bg/custom.webp";
import backgroundInnovation from "/src/assets/img/section-bg/innovation.webp";
import backgroundMadeIn from "/src/assets/img/section-bg/made-in.webp";
import backgroundCustomizer from "/src/assets/img/section-bg/customizer.webp";
