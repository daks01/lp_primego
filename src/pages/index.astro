---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Section from "../components/Section.astro";
import HeroSlider from "../components/HeroSlider.astro";
import StarTrekText from "../components/StarTrekText.astro";
import Button from "../components/Button.astro";

import Customizator from "../components/Customizator.vue";

import { Image } from "astro:assets";
import myImportedImage from "../assets/img/customised_pattern.png";
import backgroundHero from "../assets/img/section-bg/hero.webp";
import backgroundNano from "../assets/img/section-bg/nano.webp";
import backgroundConvection from "../assets/img/section-bg/convection.webp";
import backgroundForm from "../assets/img/section-bg/form.webp";
import backgroundCustom from "../assets/img/section-bg/custom.webp";
import backgroundInnovation from "../assets/img/section-bg/innovation.webp";
import backgroundMadeIn from "../assets/img/section-bg/made-in.webp";
import backgroundCustomizer from "../assets/img/section-bg/customizer.webp";
---

<Layout>
	<Header />
	<main>
		<!-- Hero -->
		<Section
			class="section"
			style={{ backgroundImage: `url(${backgroundHero.src})` }}
		>
			<div class="hero">
				<StarTrekText
					as="span"
					class="text-on-background"
					aria-hidden="true"
				>
					Primego
				</StarTrekText>
				<StarTrekText as="h1">Primego</StarTrekText>
				<div>
					<p class="lead">Ipsum consectetur</p>
					<p>
						Lorem ipsum dolor sit amet consectetur. Viverra quis eu
						turpis faucibus nec id.
					</p>
					<Button as="a" href="#customizer">Make Your Model</Button>
				</div>
			</div>
			<div class="heroSlider-wrapper">
				<HeroSlider />
			</div>

			<style lang="scss">
				.text-on-background {
					font-size: min(53vw, var(--container-width-in-px) / 100 * 53);
					margin: 0;
					position: absolute;
					top: var(--size-5);
					left: 0;
					width: 100%;
					height: 100vh;
					overflow: hidden;
					display: flex;
					justify-content: center;
					opacity: 0.15;
					z-index: -1;
					user-select: none;
				}
				.hero {
					padding-left: calc(var(--adaptive-pixel) * 200);
					width: 50%;
				}
				.heroSlider-wrapper {
					display: flex;
					justify-content: flex-end;
					margin: calc(var(--adaptive-pixel) * 460 * -1) 0 0;
				}
				@media screen and (width < 1024px) {
					.text-on-background {
						font-size: 53vw;
					}
				}
			</style>
		</Section>
		<!-- НАНО ТЕКСТИЛЬ -->
		<Section
			class="section"
			style={{ backgroundImage: `url(${backgroundNano.src})` }}
		>
			<header>
				<StarTrekText as="h1">
					НАНО <br />ТЕКСТИЛЬ
				</StarTrekText>
			</header>
			<blockquote>
				<p>
