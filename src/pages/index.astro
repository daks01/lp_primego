<Layout title="Primego">
	<Header hideBuyButton="true"/>
	<main>
		<!-- Hero -->
		<Section
			class="section"
			style={{ backgroundImage: `url(${backgroundHero.src})` }}
		>
			<div class="hero">
				<StarTrekText
					as="span"
					class="text-on-background"
					aria-hidden="true"
				>
					Primego
				</StarTrekText>
				<StarTrekText as="h1">Primego</StarTrekText>
