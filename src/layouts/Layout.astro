---
import { getImage } from "astro:assets"
import Head from './Head.astro';
import { optimizeImagesAndSaveInStore } from '../utils/shopCartImages';

const { backgroundImage, title } = Astro.props;

const optimizedBackgroundImage = backgroundImage
	? await getImage({ src: backgroundImage, quality: '95' })
	: {src:''};

optimizeImagesAndSaveInStore();
---

<!doctype html>
<html lang="ru">
	<head>
		<Head title={title} />
		<slot name="head" />
	</head>
	<body style={backgroundImage ? `background-image: url(${optimizedBackgroundImage?.src})` : ''}>
		<slot />
	</body>
</html>

<style>
html, body {
	min-height: 100%;
	height: 100%;
}
body {
	background-position: top center;
	background-size: cover;
}
</style>
