---
const { as: Element = 'button', variant, class: className, ...props } = Astro.props;
---

<Element class:list={['arrowButton', className]} {...props}>
    <svg focusable="false" width="42" height="42" viewBox="0 0 42 42" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path
            d={variant === 'left'
                ? 'M33.43 21H8.93M21.18 33.25 8.93 21 21.18 8.75'
                : 'M8.93 21h24.5M21.18 8.75 33.43 21 21.18 33.25'}
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
    </svg>
</Element>

<style lang="scss">
    .arrowButton {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        border: none;
        color: var(--color-white);
        width: var(--45px);
        height: var(--45px);
        cursor: pointer;
        z-index: 10;

        &::before {
            content: '';
            position: absolute;
            width: 200%;
            height: 200%;
            z-index: -1;
        }

        svg {
            pointer-events: none;
        }
    }

    @media screen and (max-width: 1023px) {
        .arrowButton {
            width: calc(var(--1px) * 24);
            height: calc(var(--1px) * 24);
        }
    }
</style>
