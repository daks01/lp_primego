---
const { 
  width = 1920,
  ...props
} = Astro.props;
---
<div class="container" {...props} >
	<slot />
</div>

<style define:vars={{ width }}>
	.container {
		width: calc(var(--1px) * var(--width));
		max-width: calc(100vw - var(--gutter) *2);
		padding: 0.02px 0;
		margin: 0 auto;
	}
	@media screen and (max-width: 1023px) {
		.container {
			width: calc(var(--1px) * var(--container-width));
		}
	}
</style>

