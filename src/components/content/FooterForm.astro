---
import StarTrekText from "../ui/StarTrekText.astro";
import Button from "../ui/Button.astro";
---
<!-- 
	ToDo сделать отправку типа такой
	https://rameezimdad.blogspot.com/2023/09/conatct-form-data-to-google-sheet-and.html 
-->
<div data-animate>
	<StarTrekText as="h2" class="h1 title" id="form-title">Contact Us</StarTrekText>
	<p class="subtitle" id="form-subtitle">
		Lorem ipsum dolor sit amet consectetur. <br />
		Viverra quis eu turpis faucibus nec id.
	</p>
	<form action="" class="form" aria-labelledby="form-title" aria-describedby="form-subtitle">
		<div class="form__layout">
			<div class="form__row form__row_half">
				<label for="form-name" class="sr-only">Name</label>
				<input id="form-name" type="text" placeholder="Name" class="form-field" required/>
			</div>
			<div class="form__row form__row_half">
				<label for="form-name" class="sr-only">Email</label>
				<input id="form-email" type="email" placeholder="Email" class="form-field" required/>
			</div>
			<div class="form__row">
				<label for="form-question" class="sr-only">Your question</label>
				<textarea id="form-question" placeholder="Your question" class="form-field" rows="1"></textarea>
			</div>
			<div class="form__row form__row_submit">
				<Button type="submit" class="submit-button" data-animate>Send</Button>
			</div>
		</div>
	</form>
	<div role="alert" aria-live="polite" class="form" hidden>
		<span class="h5">Success</div>
	</div>
</div>
<style>
	.title {
		text-align: center;
		font-size: calc(var(--adaptive-pixel) * 80);
		line-height: 1.1;
		margin-bottom: var(--size-1);
	}
	.subtitle {
		text-align: center;
		margin-bottom: var(--size-3);
	}
	.form {
		text-align: center;
		margin-bottom: var(--size-5);
		max-width: calc(var(--adaptive-pixel) * 706);
		margin: 0 auto;
	}
	.form__layout {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
	}
	.form__row {
		margin-bottom: calc(var(--adaptive-pixel) * 20);
		width: 100%;
	}
	.form__row_half {
		width: 48%;
	}
	.form__row_submit {
		margin-top: var(--size-2);
	}
	.submit-button {
		padding-left: var(--size-4);
		padding-right: var(--size-4);
	}

	.form-field {
		border: none;
		border-bottom: 1px solid rgba(255,255,255,.3);
		background: none;
		color: var(--text-color);
		font-weight: 400;
		font-size: calc(var(--adaptive-pixel) * 16);
		line-height: 1.5;
		font-family: inherit;
		padding: calc(var(--adaptive-pixel) * 10) 0;
		width: 100%;
	}
	.form-field:focus {
		background-color: rgba(255,255,255,.1);
		outline: none;
		padding: calc(var(--adaptive-pixel) * 10);
	}
	textarea.form-field {
		resize: vertical;
		min-height: calc(var(--adaptive-pixel) * 40);
		max-height: var(--size-6);
	}
	
</style>
