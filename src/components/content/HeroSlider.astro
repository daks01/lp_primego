---
import "@splidejs/splide/css/core";
import imgSlide1 from "/src/assets/img/hero-slider/slide-1.webp";
import imgSlide2 from "/src/assets/img/hero-slider/slide_2.webp";
import imgSlide3 from "/src/assets/img/hero-slider/slide_3.webp";
---

<div class="splide" role="group" aria-hidden="true">
    <div class="splide__track">
        <div class="splide__list">
            <img
                src={imgSlide1.src}
                class="splide__slide"
                alt=""
                loading="lazy"
            />
            <img
                src={imgSlide2.src}
                class="splide__slide"
                alt=""
                loading="lazy"
            />
            <img
                src={imgSlide3.src}
                class="splide__slide"
                alt=""
                loading="lazy"
            />
        </div>
    </div>
</div>

<script>
    import Splide from "@splidejs/splide/dist/js/splide.min.js";

    document.addEventListener("DOMContentLoaded", () => {
        var splide = new Splide(".splide", {
            type: "fade",
            rewind: true,
            lazyLoad: "nearby",
            autoplay: true,
            pagination: false,
        });
        splide.mount();
    });
</script>

<style lang="scss">
    .splide {
        width: calc(var(--adaptive-pixel) * 1200);

        & :global(.splide__arrows) {
            position: absolute;
            bottom: calc(var(--adaptive-pixel) * 200);
            display: flex;
            width: 100%;
            justify-content: space-between;
            z-index: 2;
        }
        & :global(.splide__arrow) {
            background: none;
            border: none;
            margin: 0 var(--size-4);
            cursor: pointer;
        }

        & :global(svg) {
            fill: var(--color-white);
            width: calc(var(--adaptive-pixel) * 35);
            height: calc(var(--adaptive-pixel) * 35);
        }
        & :global(.splide__arrow--prev) {
            transform: scale(-1);
        }
        & :global(.splide__arrow--next) {}
    }
</style>
