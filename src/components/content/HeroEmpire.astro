---
import Section from "../ui/Section.astro";
import StarTrekText from "../ui/StarTrekText.astro";
import BackgroundText from "../ui/BackgroundText.astro";
import Button from "../ui/Button.astro";
import { Image } from 'astro:assets';
import imageEmpireSneakers from "/src/assets/img/hero-slider/single-empire.png";
import BackButton from "../ui/BackButton.astro";

const { backgroundImage } = Astro.props;
---

<Section backgroundImage={backgroundImage}>
	<BackgroundText>Primego</BackgroundText>
	<div class="hero">
		<BackButton href="./../"></BackButton>
		<StarTrekText as="h1" class="page-title">ИМПЕРИЯ</StarTrekText>
		<div>
			<p class="lead">Твой элегантный стиль</p>
			<p>
				Эти кроссовки сочетают в&nbsp;себе изысканный дизайн с&nbsp;выдающейся комфортностью, 
				обеспечивая вам непревзойденный опыт носки.
			</p>
			<p class="display-mobile-none price">
				<span class="h3">27&thinsp;700&thinsp;₽</span>
			</p>
			<Image src={imageEmpireSneakers} alt="" role="presentation" class="hero__image" loading="lazy" />
			<Button as="button" onclick="alert('disabled')">
				<span class="display-none display-mobile-block">Купить от 27&thinsp;700&thinsp;₽</span>
				<span class="display-mobile-none">Купить сейчас</span>
			</Button>
		</div>
</Section>

<style lang="scss">
	.page-title {
		margin-bottom: var(--size-90);
		font-size: var(--heading-1);
	}
	.hero {
		max-width: calc(var(--adaptive-pixel) * 720);
		margin-bottom: calc(var(--adaptive-pixel) * 150);
	}
	.hero__image {
		bottom: calc(var(--adaptive-pixel)* 270);
		position: absolute;
		width: calc(var(--adaptive-pixel)* 785);
		left: 50%;
	}
	.price {
		color: var(--text-color);
		margin-bottom: var(--size-45);
	}

	@media screen and (max-width: 1023px) {
		.hero {
			text-align: center;
			margin-bottom: calc(var(--adaptive-pixel) * 60);
		}
		.page-title {
			font-size: calc(var(--adaptive-pixel) * 128);
			margin-top: calc(var(--adaptive-pixel) * 36);
			margin-bottom: var(--size-30);
		}
		.hero__image {
			position: static;
			margin-bottom: calc(var(--adaptive-pixel) * 30);
			width: 90%;
		}
	}
</style>