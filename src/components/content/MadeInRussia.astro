---
import { Image } from 'astro:assets';
import Section from "../ui/Section.astro";
import StarTrekText from "../ui/StarTrekText.astro";
import bg2Image from '../../assets/img/made-in-russia/bg.svg';
import bg2MobileImage from '../../assets/img/made-in-russia/bg_mobile.svg';

const { backgroundImage } = Astro.props;

---
<Section backgroundImage={backgroundImage} class="section">
	<header>
		<StarTrekText as="h2" class="h1 title">Сделано в России</StarTrekText>
	</header>
	<blockquote class="blockquote">
		<p>Произведено в&nbsp;России</p>
		<p>Разработано в&nbsp;России</p>
		<p>Из российских материалов<br> и&nbsp;технологий</p>
	</blockquote>
	<picture class="bg-img">
		<source media="(min-width: 768px)" srcset={bg2Image.src}>
		<source media="(max-width: 767px)" srcset={bg2MobileImage.src}>
		<Image
			width="1030"
			height="596"
			src={bg2Image}
			alt=""
			loading="lazy"
		/>
	</picture>
</Section>

<style lang="scss">
	.section {
		//padding: var(--200px) 0 var(--120px);
	}
	.title {
		text-align: center;
		margin-top: calc(var(--1px) * 505);
	}
	.blockquote {
		margin-left: 62%;
	}
	.bg-img {
		position: absolute;
		top: var(--90px);
		left: 0;
		width: 100%;
		height: calc(100% - var(--90px));
		z-index: -1;
	}
	.bg-img img {
		object-fit: contain;
		width: 100%;
		height: 100%;
	}
	@media screen and (max-width: 1023px) {
		.title {
			margin-top: calc(var(--1px) * 230);
			margin-bottom: var(--60px);
			text-align: right;
		}
		.bg-img {
			width: 100%;
			height: auto;
			top: var(--30px);
			left: 0;
		}
		.blockquote {
			margin-left: 0;
		}
	}
</style>