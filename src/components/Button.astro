---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;
const {
  as: Element = "div",
  href,
  class: className,
  ...props
} = Astro.props;

const { pathname } = Astro.url;
---

<Element {...props} href={href} class:list={["button", className]}>
  <slot />
</Element>

<style>
.button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    transition: filter .1s;
    border: none;
	border-radius: 100px;
    padding: calc(var(--adaptive-pixel) * 14) calc(var(--adaptive-pixel) * 20);
    background: var(--color-product);
    color: var(--color-white);
    font-weight: 700;
	font-size: calc(var(--adaptive-pixel) * 20);
    text-decoration: none;
    white-space: nowrap;
    cursor: pointer;
    user-select: none;

    &:hover {
        filter: brightness(105%);
    }
    &:active {
        filter: brightness(97%);
    }
}


@media screen and (width < 768px) {
    .button {
        width: 100%;
    }
}
</style>
